{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "server/*": [
        "src/server/*"
      ],
      "client/*": [
        "src/client/*"
      ],
      "types/*": [
        "src/client/types/*"
      ],
      "enums/*": [
        "src/client/enums/*"
      ],
      "hooks/*": [
        "src/client/hooks/*"
      ],
      "components/*": [
        "src/client/components/*"
      ],
      "services/*": [
        "src/client/services/*"
      ],
      "store/*": [
        "src/client/store/*"
      ],
      "styles/*": [
        "src/client/styles/*"
      ],
      "pages/*": [
        "src/client/pages/*"
      ],
      "utils/*": [
        "src/client/utils/*"
      ],
      "assets/*": [
        "src/client/assets/*"
      ],
      "__mocks__/*": [
        "src/client/__mocks__/*"
      ],
      "@shared/*": [
        "src/client/components/@shared/*"
      ],
    },
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}